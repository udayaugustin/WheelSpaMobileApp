            <custom:CustomEntry CornerRadius="0" IsCurvedCornersEnabled="True" BorderColor="#BCE0FD" HorizontalTextAlignment="Start" FontSize="17" HeightRequest="50" Placeholder="Rare Tyre"  PlaceholderColor="#2699FB" TextColor="#2699FB" WidthRequest="70" Margin="20,0,20,10" BackgroundColor="White"/>
            <custom:CustomEntry CornerRadius="0" IsCurvedCornersEnabled="True" BorderColor="#BCE0FD" HorizontalTextAlignment="Start" FontSize="17" HeightRequest="50" Placeholder="Front Tyre"  PlaceholderColor="#2699FB" TextColor="#2699FB" WidthRequest="70" Margin="20,0,20,10" BackgroundColor="White"/>
            <Button Text="save" TextColor="#2699FB" BackgroundColor="#CCCCCC" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Margin="0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>